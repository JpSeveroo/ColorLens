{
    "manifest_version": 3,
    "version": "1.0",
    "name": "ColorLens",
    "description": "Uma extensão de navegador para auxiliar pessoas com daltonismo, tornando a web mais acessível.",
    "icons": {
        "16": "assets/icons/icon16.png",
        "48": "assets/icons/icon48.png",
        "128": "assets/icons/icon128.png"
    },
    "action": {
        "default_title": "ColorLens",
        "default_popup": "src/popup/popup.html",
        "default_icon":{
            "16": "assets/icons/icon16.png",
            "24": "assets/icons/icon24.png",
            "32": "assets/icons/icon32.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content/content.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "src/background/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [ "assets/images/colorlens-logo.svg" ],
            "matches": [ "<all_urls>" ]
        }
    ],
    "options_ui": {
        "page": "src/options/options.html",
        "open_in_tab": true
    }
}